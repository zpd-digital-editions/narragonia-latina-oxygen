  <a:largeIconPath href="${frameworks}/narragonia-latina-oxygen/resources/icons/line.png"/>
  <a:operations>
    <a:operation id="InsertFragmentOperation">
      <a:xpathCondition>ancestor-or-self::lg</a:xpathCondition>
      <a:arguments>
        <a:argument name="fragment"><l xmlns="http://www.tei-c.org/ns/1.0">${caret}</l>
